@page "~/Categorias/{offset?}/{limit?}"
@model CategoriesModel
@{
    ViewData["Title"] = "Categories";
}
<h1>Categorias</h1>
<table>
    <thead>
        <tr>
            <td>
                ID
            </td>
            <td>
                Title
            </td>
            <td>
                Price
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Categories)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Price.ToString("C",new CultureInfo("pt-BR"))
                </td>
            </tr> 
        }
    </tbody>
</table>